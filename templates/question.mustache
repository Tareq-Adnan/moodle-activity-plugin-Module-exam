        <div class="d-flex justify-content-between bg-light m-1 p-2 border rounded">
            {{option_title}}
            <div class="d-flex">
                <a class="btn btn-info m-2" href="?editoption={{id}}&phase_id={{p_id}}&vid={{vid}}&addOp={{vid}}">Edit</a> 
